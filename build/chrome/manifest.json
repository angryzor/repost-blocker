{
	"manifest_version": 2,
	"name": "Repost Blocker",
	"version": "2.0",
	"description": "Blocks the cancer that's killing reddit",
	"update_url": "http://node.angryzor.com/~rtytgat/repostblocker/download/chrome/Repost_Blocker.crx",
	"content_scripts": [
		{
			"matches": [
				"*://*.reddit.com/*"
			],
			"js": ["content.js"],
			"css": ["content.css"]
		}
	],
  "background": {
    "scripts": ["background.js"]
  },
	"permissions": [
		"*://*.reddit.com/*",
		"http://karmadecay.com/*"
	]
}
